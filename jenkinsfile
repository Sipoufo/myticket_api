pipeline {
    agent any
    tools{
        maven 'maven 3.8.7'
    }
    stages{
        stage('Build Maven'){
            steps{
                checkout scmGit(branches: [[name: '*/main']], extensions: [], userRemoteConfigs: [[url: 'https://github.com/Sipoufo/myticket_api.git']])
                sh 'mvn clean install'
            }
        }
        stage('Build docker image'){
            steps{
                script{
                    sh 'docker build -t javatechie/myticket .'
                }
            }
        }
    }
}
